# Check all members state
function barrier_allgood(barrier, bc) {
  barriergood = 1
  barrier.foreach(function(key, value, robot){
      barrier.get(key)
      #log("VS entry : ", key, " ", value, " ", robot)
      if(key == "d"){
        if(value == 1)
          return 1
      } else if(key!="n" and value != bc)
        barriergood = 0
    })
  return barriergood
}
