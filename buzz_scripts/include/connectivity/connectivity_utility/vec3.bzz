#
# Calculates v1 / scalar
# PARAM v: A vector2.
# PARAM s: A number (float or int).
# RETURN: v / s
#
math.vec3.div = function(v, s) {
  return {
    .x = v.x / s,
    .y = v.y / s,
    .z = v.z / s
  }
}

math.vec3.dis = function(a, b) {
  return math.sqrt((b.x - a.x)*(b.x - a.x) + (b.y - a.y)*(b.y - a.y) + (b.z - a.z)*(b.z - a.z))
}
